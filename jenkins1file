pipeline{
    agent any
parameters {
  choice choices: ['apply', 'destroy'], description: 'Please choose an action', name: 'Action'
}

    stages{
        stage('git checkout '){
            steps{
                git branch: 'main', url: 'https://github.com/kprasantasg87/Terraform.git'
            }
        }
         stage('terraform init'){
            steps{
                sh 'terraform init'
            }
        }
         stage('terraform plan'){
            steps{
                sh 'terraform plan  -input=false -out=tffile'
            }
        }
        stage('terraform apply'){
            steps{
               script{
                 if (params.Action == 'apply'){
                 sh 'terraform apply --auto-approve tffile'
}
else if (params.Action == 'destroy'){
    sh 'terraform destroy --auto-approve '
}

}
            }
        }
    }
}
